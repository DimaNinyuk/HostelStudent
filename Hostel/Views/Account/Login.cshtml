@model Hostel.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
@{
    Layout = " ~/Views/Shared/_Login.cshtml";
}

<!-- Form-->
    <div class="form">

        <div class="form-toggle"></div>
        <div class="form-panel one">
            <div class="form-header">
                <h1>Авторизация</h1>
            </div>
            <div class="form-content">
                <form method="post" action="/Account/Login">
                    <div class="form-group">
                        <label for="username">Логин</label>
                        <input type="text" id="username" name="Login" required="required" />
                        @Html.ValidationMessageFor(model => model.Login, String.Empty, new { @class = "help-inline", @style = "color: red" })
                    </div>
                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" id="password" name="Password" required="required" />
                        @Html.ValidationMessageFor(model => model.Password, String.Empty, new { @class = "help-inline", @style = "color: red" })
                    </div>
                    @*<div class="form-group">
                        <label class="form-remember">
                            <input type="checkbox" />Remember Me
                        </label><a class="form-recovery" href="#">Forgot Password?</a>
                    </div>*@
                    <div class="form-group">
                        <button type="submit">Войти</button>
                    </div>
                </form>
            </div>
        </div>
       
