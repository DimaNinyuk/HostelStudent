@model IEnumerable<Hostel.Models.Students>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Список студентов</h3>
    </div>

    <div class="panel-body">
        <p>
            @Html.ActionLink("Добавить нового", "Create")
        </p>

        <table class="table table-hover">
            <tr>
                <th scope="col">
                    @Html.DisplayName("Фамилия")
                </th>
                <th scope="col">
                    @Html.DisplayName("Имя")
                </th>
                <th scope="col">
                    @Html.DisplayName("Факультет")
                </th>
                <th scope="col">
                    @Html.DisplayName("Дата поступления")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Faculty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiptDate)
                    </td>
                    <td >
                        @Html.ActionLink("Изменить", "Edit", new { id = item.StudentsId }) |
                        @Html.ActionLink("Детальная информация", "Details", new { id = item.StudentsId }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.StudentsId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


